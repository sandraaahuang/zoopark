<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_zoo_picture"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textview_zoo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        style="@style/style_text_bold"
        app:layout_constraintStart_toEndOf="@+id/imageview_zoo_picture"
        app:layout_constraintTop_toTopOf="@+id/imageview_zoo_picture" />

    <TextView
        android:id="@+id/textview_zoo_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxLines="2"
        style="@style/style_text_regular_size_16"
        app:layout_constraintEnd_toStartOf="@+id/imageview_zoo_right_arrow"
        app:layout_constraintStart_toEndOf="@+id/imageview_zoo_picture"
        app:layout_constraintTop_toBottomOf="@+id/textview_zoo_title" />

    <TextView
        android:id="@+id/textview_zoo_futher_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        style="@style/style_text_regular_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_zoo_picture"
        app:layout_constraintTop_toBottomOf="@+id/textview_zoo_information" />

    <ImageView
        android:id="@+id/imageview_zoo_right_arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/img_right_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>